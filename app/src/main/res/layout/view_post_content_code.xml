<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/default_margin_padding"
    android:layout_marginLeft="@dimen/default_margin_padding_small"
    android:layout_marginRight="@dimen/default_margin_padding_small"
    android:layout_marginTop="@dimen/default_margin_padding_small"
    app:cardBackgroundColor="@color/extra_extra_light_gray">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/default_margin_padding_large"
        android:paddingLeft="@dimen/default_margin_padding"
        android:paddingRight="@dimen/default_margin_padding"
        android:paddingTop="@dimen/default_margin_padding_large"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="horizontal">

        <TextView
            android:id="@+id/tv_post_content_code"
            fontPath="fonts/DroidSansMono.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollHorizontally="true"
            android:textColor="@color/text_body"
            android:textIsSelectable="true"
            android:textSize="@dimen/default_text_size_extra_small" />
    </HorizontalScrollView>
</android.support.v7.widget.CardView>