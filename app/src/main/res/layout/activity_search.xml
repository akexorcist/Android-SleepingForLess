<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_post_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha_black"
    tools:context=".view.search.SearchActivity">

    <com.mypopsy.widget.FloatingSearchView
        android:id="@+id/sfv_post_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/default_margin_padding_large"
        android:background="@color/alpha_black_background"
        android:gravity="center_vertical"
        android:hint="@string/hint_search"
        android:paddingLeft="@dimen/default_margin_padding"
        android:paddingRight="@dimen/default_margin_padding" />
</FrameLayout>
