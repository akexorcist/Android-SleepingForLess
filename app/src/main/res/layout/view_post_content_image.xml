<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.zl.reik.dilatingdotsprogressbar.DilatingDotsProgressBar
        android:id="@+id/pb_post_content_image_loading"
        style="@style/DotsProgressBar.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin_padding_extra_large" />

    <ImageView
        android:id="@+id/iv_post_content_image"
        android:layout_width="@dimen/image_content_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/default_margin_padding_small"
        android:layout_marginTop="@dimen/default_margin_padding_small"
        android:adjustViewBounds="true"
        android:contentDescription="@null" />
</FrameLayout>


