<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dialog_message_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/default_margin_padding_extra_large"
            android:paddingRight="@dimen/default_margin_padding_extra_large"
            android:paddingTop="@dimen/default_margin_padding_extra_large">

            <TextView
                android:id="@+id/tv_dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textIsSelectable="true"
                android:textSize="@dimen/default_text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_dialog_close"
                    style="@style/FloatingActionButton.Single"
                    android:layout_width="@dimen/fab_dialog_button_size"
                    android:layout_height="@dimen/fab_dialog_button_size"
                    app:backgroundTint="@color/colorAccent"
                    app:srcCompat="@drawable/vector_ic_close" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_dialog_open_app"
                    style="@style/FloatingActionButton.Single"
                    android:layout_width="@dimen/fab_dialog_button_size"
                    android:layout_height="@dimen/fab_dialog_button_size"
                    app:backgroundTint="@color/colorAccent"
                    app:srcCompat="@drawable/vector_ic_open_from_original" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>