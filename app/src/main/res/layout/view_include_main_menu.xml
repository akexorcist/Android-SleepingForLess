<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_menu"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="@dimen/fab_margin"
        app:layout_behavior="com.akexorcist.sleepingforless.widget.FloatingActionButtonBehavior"
        app:srcCompat="@drawable/vector_ic_menu" />

    <View
        android:id="@+id/view_content_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_alpha_black" />

    <com.bowyer.app.fabtransitionlayout.FooterLayout
        android:id="@+id/fl_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:ft_color="@color/colorAccent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.akexorcist.sleepingforless.widget.MenuButton
                android:id="@+id/btn_menu_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:mbIconSrc="@drawable/vector_ic_bookmark_menu"
                app:mbText="Bookmark" />

            <com.akexorcist.sleepingforless.widget.MenuButton
                android:id="@+id/btn_menu_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:mbIconSrc="@drawable/vector_ic_search"
                app:mbText="Search" />

            <com.akexorcist.sleepingforless.widget.MenuButton
                android:id="@+id/btn_menu_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:mbIconSrc="@drawable/vector_ic_sort"
                app:mbText="Sort" />

            <com.akexorcist.sleepingforless.widget.MenuButton
                android:id="@+id/btn_menu_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                app:mbIconSrc="@drawable/vector_ic_settings"
                app:mbText="Settings" />
        </LinearLayout>
    </com.bowyer.app.fabtransitionlayout.FooterLayout>
</merge>