<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_network_unavailable_description"
        style="@style/DotsProgressBar.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/network_unavailable_with_bookmark"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/default_text_size" />

    <TextView
        android:id="@+id/tv_network_unavailable_open_bookmark"
        style="@style/DotsProgressBar.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin_padding"
        android:text="@string/action_open_bookmark"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/default_text_size" />

</LinearLayout>