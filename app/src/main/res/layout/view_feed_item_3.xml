<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/default_margin_padding_small"
    android:layout_marginLeft="@dimen/default_margin_padding"
    android:layout_marginRight="@dimen/default_margin_padding"
    android:layout_marginTop="@dimen/default_margin_padding_small"
    app:cardBackgroundColor="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin_padding_extra_small">

        <ImageView
            android:id="@+id/iv_feed_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/post_image_height"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_feed_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@color/alpha_dark_gray"
            android:gravity="center"
            android:padding="@dimen/default_margin_padding_large"
            android:text="@string/sample"
            android:textColor="@color/white"
            android:textSize="@dimen/default_text_size_small" />

    </FrameLayout>
</android.support.v7.widget.CardView>