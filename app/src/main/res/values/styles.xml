<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
    </style>

    <style name="DraggerTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="PopupTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="CollapsedTitleTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_text_size_large</item>
    </style>

    <style name="ExpandedTitleTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_text_size_extra_large</item>
    </style>

    <style name="PostTitleTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_text_size_small</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RippleEffect">
        <item name="mrl_rippleAlpha">0.1</item>
        <item name="mrl_rippleColor">@color/dark_gray</item>
        <item name="mrl_rippleOverlay">true</item>
    </style>

    <style name="DotsProgressBar">
        <item name="android:layout_gravity">center</item>
        <item name="android:radius">4dp</item>
        <item name="dd_animationDuration">500</item>
        <item name="dd_horizontalSpacing">10dp</item>
        <item name="dd_numDots">5</item>
        <item name="dd_scaleMultiplier">2</item>
    </style>

    <style name="DotsProgressBar.Primary" parent="DotsProgressBar">
        <item name="android:color">@color/colorPrimary</item>
    </style>

    <style name="DotsProgressBar.Accent" parent="DotsProgressBar">
        <item name="android:color">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
