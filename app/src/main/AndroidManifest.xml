<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akexorcist.sleepingforless">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SFLApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.feed.MainActivity"
            android:screenOrientation="fullSensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.post.PostReaderActivity"
            android:launchMode="singleTask"
            android:screenOrientation="fullSensor"
            android:theme="@style/DraggerTheme" />
        <activity
            android:name=".view.post.PostActivity"
            android:launchMode="singleTask"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".view.post.DebugPostActivity"
            android:launchMode="singleTask"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".view.post.ImagePostPreviewActivity"
            android:launchMode="singleTask"
            android:screenOrientation="fullSensor"
            android:theme="@style/ImagePreviewTheme" />
    </application>

</manifest>